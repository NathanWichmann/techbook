<h4 class="ui horizontal header divider"><p><i class="users icon"></i>Users</p></h4>
<div class="sad">
    <div class="ui container grid">
        <div class="ui cards" id="asd">
            {{#each userz as |user|}}
                <div class="ui card yellow">
                    <div class="content">
                        <a href="/profile/{{user.id}}" class="header"><i class="user circle outline icon"></i>{{user.firstname}} {{user.lastname}}
                            <span class="right floated">
                            <img class="ui avatar image" src="/avatars/{{avatar}}.png">
                            </span>
                        </a>
                        <div class="meta">
                            <span class="category">{{user.github}}</span>
                        </div>
                        <div class="description">
                            <a id="user-profile" href="https://www.linkedin.com/in/{{user.linkedin}}"><i class="linkedin icon"></i>{{user.linkedin}}</a>
                            <div class="right floated">
                                <span class="ui yellow text" >{{experience}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="extra content">
                        <div class="right floated author">
                            <p class="user-badge-home"><i class="star icon"></i>{{user.stars}}</p>
                        </div>
                        <div class="left floated author">
                            <i class="location arrow icon"></i>
                            {{user.country}} / {{user.city}}
                        </div>
                        <small id="user-id">{{user.id}}</small>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>
<div class="footer-padding"></div>


<script src="./js/search-results.js"></script>