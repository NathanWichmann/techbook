
<div class="ui vertical stripe segment">
    <div class="ui middle aligned stackable grid container">
        <div class="column">
            <h4 class="ui horizontal header divider"><p>Search Users</p></h4>
            <form class="ui form">
                <div class="two fields">
                    <div class="field">
                        <label>City</label>
                        <input type="text" id="location-city" placeholder="Type City Name">  
                    </div>
                    <div class="field">
                        <label>Country</label>
                        <input type="text" id="location-country" placeholder="Insert Country Name">
                    </div>
                </div>
                <div class="two fields">
                    <div class="field">
                        <label>Technologies</label>
                        <select class="ui dropdown" id="technology">
                            {{#each technames}}
                            <option>{{techname}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="field">
                        <label>Experience</label>
                        <select class="ui search dropdown" id="experiance">
                            <option value="junior">Junior</option>
                            <option value="intermediate">Intermediate</option>
                            <option value="senior">Senior</option>
                        </select>       
                    </div>
                </div>
                <div class="middle aligned">
                    <div class="ui animated fade fluid button green" tabindex="0">
                        <div class="visible content">Search</div>
                        <div class="hidden content">
                            <i class="search icon"></i>
                        </div>
                    </div>
                </div>
                </div>
            </form>
        </div>
    </div>
</div>

{{!-- create space to display searched users --}}


<div class="search-container">
    <div class="ui container grid">
        <div class="ui cards">
            {{#each mainprojects}}
            <div class=" ui card purple">
                <div class="content">
                    <a href="{{usermainproject}}" class="header">{{mainprojectname}}</a>
                    <div class="meta">
                        <span class="category">{{github}}</span>
                    </div>
                    <div class="description">
                        <a id="user-profile" href="/profile/{{id}}">{{firstname}} {{lastname}}</a>
                    </div>
                </div>
                <div class="extra content">
                    <div class="right floated author">
                        <p class="user-badge-home">{{experience}}</p>
                    </div>
                    <div class="left floated author">
                        {{country}} / {{city}}
                    </div>
                    <small id="user-id">{{id}}</small>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
<div class="footer-padding3"></div>
<script src="./js/search.js"></script>