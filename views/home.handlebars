<h4 class="ui horizontal header divider"></h4>
<h4 class="ui horizontal header divider"><p><i class="project diagram icon"></i>Main Projects</p></h4>
<h4 class="ui horizontal header divider"></h4>
<div class="main-project-container">
    <div class="ui container grid">
        <div class="ui cards">
            {{#each mainprojects}}
            <div class=" ui card yellow">
                <div class="content">
                    <a href="{{usermainproject}}" class="header"><i class="gem outline icon"></i>  {{mainprojectname}}
                        <span class="right floated">
                            <img class="ui avatar image" src="/avatars/{{avatar}}.png">
                        </span>
                    </a>
                    <div class="meta">
                        <span class="category">{{github}}</span>
                    </div>
                    <div class="description">
                        <a id="user-profile" href="/profile/{{id}}"><i class="user circle outline icon"></i>{{firstname}} {{lastname}}</a>
                        <div class="right floated">
                            <span class="ui yellow text" >{{experience}}</span>
                        </div>
                    </div>
                </div>
                <div class="extra content">
                    <div class="right floated author">
                        <p class="user-badge-home"> <i class="star icon"></i>{{stars}}</p>
                    </div>
                    <div class="left floated author">
                        <i class="location arrow icon"></i>
                        {{country}} / {{city}}
                    </div>
                    <small id="user-id">{{id}}</small>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
